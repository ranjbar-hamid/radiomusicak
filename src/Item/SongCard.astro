---
const { data } = Astro.props;
---

{
  data.map((d: any) => {
    return (
      <a
        class="flex flex-col relative md:h-50 border-2 rounded overflow-hidden border-slate-300 dark:border-slate-600 hover:scale-101 transition-all duration-300"
        data-cast={d.cast}
      >
        <h1 class="z-10 absolute backdrop-blur-lg p-1 m-0.5 text-xs md:text-sm bg-gray-300/65 rounded-xs text-gray-800 shadow">
          {d.title}
        </h1>
        <img
          class="aspect-square size-full object-cover"
          id={d.picId}
          src={"/pic/" + d.picId}
          alt={d.title}
          loading="lazy"
        />
      </a>
    );
  })
}
