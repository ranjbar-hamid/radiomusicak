---
import Layout from "../../layouts/Layout.astro";
import "../../styles/global.css";

const { id } = Astro.params;
const f = await fetch(
  "https://script.google.com/macros/s/AKfycbz2ilrGauIAJoWzpZ3IcBv6gEato1hUWcC5p-1OJctJZcmwSIiLvrA5n5c8QZ9E5Mb3/exec?t=list&start=0&end=50",
  { cache: "reload" }
);
const data = await f.json();
const d = await data.find((item: any) => item?.link == id);
---

<Layout title={d?.title} lang="fa" dir="rtl">
  <iframe
    class="w-full min-h-screen"
    src=`https://castbox.fm/app/castbox/player/id4804438/${d?.cast}?v=8.22.11&autoplay=1`
  ></iframe>
</Layout>
